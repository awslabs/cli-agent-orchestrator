# .ralphrc - Ralph project configuration
# Documentation: https://github.com/frankbria/ralph-claude-code

# Project identification
PROJECT_NAME="cli-agent-orchestrator"
PROJECT_TYPE="python"

# Loop settings
MAX_CALLS_PER_HOUR=100
CLAUDE_TIMEOUT_MINUTES=15
CLAUDE_OUTPUT_FORMAT="json"

# Tool permissions
# cp/ls/cat needed for fixture verification, skill syncing, and doc checks
ALLOWED_TOOLS="Write,Read,Edit,Bash(git *),Bash(uv *),Bash(python *),Bash(pytest *),Bash(cp *),Bash(ls *),Bash(cat *)"

# Session management
# false = each run starts fresh (prevents stale completion signals from prior runs)
SESSION_CONTINUITY=false
SESSION_EXPIRY_HOURS=24

# Task sources
TASK_SOURCES="local"

# Circuit breaker thresholds
CB_NO_PROGRESS_THRESHOLD=3
CB_SAME_ERROR_THRESHOLD=5
CB_OUTPUT_DECLINE_THRESHOLD=70

